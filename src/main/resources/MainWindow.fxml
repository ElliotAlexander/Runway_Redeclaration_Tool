<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.TextFlow?>
<BorderPane prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="RunwayRedeclarationTool.Controllers.MainWindowController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu text="File">
                <MenuItem text="New runway..." fx:id="new_runway_button" onAction="#handleNewRunway"/>
                <MenuItem text="New obstruction..."/>
            </Menu>
            <Menu text="View">
                <CheckMenuItem text="Clearway"/>
                <CheckMenuItem text="Stopway"/>
                <CheckMenuItem text="Cleared and graded areas"/>
            </Menu>
            <Menu text="About">
                <MenuItem text="About"/>
            </Menu>
            <Menu text="Help">
                <MenuItem text="Help"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <Tab text="Top-down view">
                <FlowPane fx:id="topDownViewContainer" minHeight="0.0" minWidth="0.0" prefHeight="0.0" prefWidth="0.0"/>
            </Tab>
            <Tab text="Side view"/>
        </TabPane>
    </center>
    <right>
        <VBox prefWidth="350.0" BorderPane.alignment="CENTER">
            <GridPane hgap="5.0">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" prefWidth="100.0"/>
                    <ColumnConstraints prefWidth="250.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Label text="Airport:"/>
                <Label text="Runway:" GridPane.rowIndex="1"/>
                <ComboBox prefWidth="325.0" promptText="Select an airport..." GridPane.columnIndex="1"/>
                <ComboBox fx:id="runwayComboBox" onAction="#drawRunway" prefWidth="325.0"
                          promptText="Select a runway..." GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </GridPane>
            <GridPane hgap="5.0">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" prefWidth="100.0"/>
                    <ColumnConstraints prefWidth="250.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Label text="Obstruction:"/>
                <ComboBox fx:id="obstructionComboBox" prefWidth="325.0" promptText="Add an obstruction..." GridPane.columnIndex="1"/>
                <padding>
                    <Insets bottom="10.0" top="10.0"/>
                </padding>
            </GridPane>
            <GridPane hgap="5.0">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" prefWidth="250.0"/>
                    <ColumnConstraints prefWidth="70.0"/>
                    <ColumnConstraints minWidth="10.0" prefWidth="40.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Label text="Obstruction distance from THR LEFT:"/>
                <Label text="Obstruction distance from THR RIGHT:" GridPane.rowIndex="1"/>
                <Label text="Obstruction distance from C/L:" GridPane.rowIndex="3"/>
                <TextField GridPane.columnIndex="1"/>
                <TextField GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <TextField GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <Label text="m" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                <Label text="m" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <Label text="m" GridPane.columnIndex="2"/>
                <Label text="Obstruction side of C/L:" GridPane.rowIndex="2"/>
                <ComboBox prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <padding>
                    <Insets bottom="10.0"/>
                </padding>
            </GridPane>
            <Button fx:id="calculateButton" onAction="#recalculateDistances" prefWidth="143.0" text="Calculate">
                <VBox.margin>
                    <Insets bottom="10.0" left="162.0" right="10.0"/>
                </VBox.margin>
            </Button>
            <TabPane prefHeight="500.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
                <Tab text="Declared distances">
                    <TextFlow fx:id="declaredDistances" style="-fx-font-family:'Consolas'">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>
                    </TextFlow>
                </Tab>
                <Tab text="Calculation breakdown">
                    <TextFlow fx:id="calculationsBreakdown" style="-fx-font-family:'Consolas'">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>
                    </TextFlow>
                </Tab>
            </TabPane>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </VBox>
    </right>
</BorderPane>
