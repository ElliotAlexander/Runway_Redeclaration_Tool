<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<BorderPane prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RunwayRedeclarationTool.Controllers.MainWindowController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu text="File">
                <MenuItem fx:id="new_runway_button" onAction="#handleNewRunway" text="New runway..." />
                <MenuItem onAction="#handleNewObstacle" text="New obstacle..." />
            </Menu>
            <Menu text="View">
                <CheckMenuItem text="Clearway" />
                <CheckMenuItem text="Stopway" />
                <CheckMenuItem text="Cleared and graded areas" />
            </Menu>
            <Menu text="About">
                <MenuItem text="About" />
            </Menu>
            <Menu text="Help">
                <MenuItem text="Help" />
            </Menu>
        </MenuBar>
    </top>
    <center>
        <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <Tab text="Top-down view">
                <TabPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #ffffff;" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
                    <Tab fx:id="leftRunwayTab" text="Runway 1">
                        <FlowPane fx:id="leftTopDownViewContainer" minHeight="0.0" minWidth="0.0" prefHeight="0.0" prefWidth="0.0" style="-fx-background-color: #ffffff;" />
                    </Tab>
                    <Tab fx:id="rightRunwayTab" text="Runway 2">
                        <FlowPane fx:id="rightTopDownViewContainer" minHeight="0.0" minWidth="0.0" prefHeight="0.0" prefWidth="0.0" />
                    </Tab>
                </TabPane>
            </Tab>
            <Tab text="Side view" />
        </TabPane>
    </center>
    <right>
        <VBox prefHeight="768.0" prefWidth="375.0" BorderPane.alignment="CENTER">
            <GridPane hgap="5.0">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" prefWidth="100.0" />
                    <ColumnConstraints prefWidth="250.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <Label text="Airport:" />
                <Label text="Runway:" GridPane.rowIndex="1" />
                <ComboBox fx:id="airportComboBox" prefWidth="325.0" promptText="Select an airport..." GridPane.columnIndex="1" />
                <ComboBox fx:id="runwayComboBox" onAction="#drawRunway" prefWidth="325.0" promptText="Select a runway..." GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </GridPane>
            <GridPane hgap="5.0">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" prefWidth="100.0" />
                    <ColumnConstraints prefWidth="250.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <Label text="Obstacle:" />
                <ComboBox fx:id="obstructionComboBox" prefWidth="325.0" promptText="Add an obstacle..." GridPane.columnIndex="1" />
                <padding>
                    <Insets bottom="10.0" top="10.0" />
                </padding>
            </GridPane>
            <GridPane hgap="5.0">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" maxWidth="237.0" minWidth="225.0" prefWidth="233.0" />
                    <ColumnConstraints maxWidth="104.0" minWidth="86.0" prefWidth="98.0" />
                    <ColumnConstraints maxWidth="22.0" minWidth="9.0" prefWidth="15.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <Label text="Obstacle distance from THR LEFT:" />
                <Label text="Obstacle distance from THR RIGHT:" GridPane.rowIndex="1" />
                <Label text="Obstacle distance from C/L:" GridPane.rowIndex="3" />
                <TextField fx:id="distanceFromTHRLeft" GridPane.columnIndex="1" />
                <TextField fx:id="distanceFromTHRRight" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="distanceFromCL" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Label text="m" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                <Label text="m" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <Label text="m" GridPane.columnIndex="2" />
                <Label text="Obstacle side of C/L:" GridPane.rowIndex="2" />
                <ComboBox fx:id="runwaySideComboBox" prefHeight="31.0" prefWidth="101.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <padding>
                    <Insets bottom="10.0" />
                </padding>
            </GridPane>
            <Button fx:id="calculateButton" onAction="#recalculateDistances" prefWidth="143.0" text="Calculate">
                <VBox.margin>
                    <Insets bottom="10.0" left="116.0" right="10.0" />
                </VBox.margin>
            </Button>
            <TabPane prefHeight="500.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
                <Tab text="Declared distances">
                    <ScrollPane>
                        <TextFlow fx:id="declaredDistances" style="-fx-font-family:'Consolas'">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </TextFlow>
                    </ScrollPane>
                </Tab>
                <Tab text="Calculation breakdown">
                    <TextFlow fx:id="calculationsBreakdown" style="-fx-font-family:'Consolas'">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </TextFlow>
                </Tab>
            </TabPane>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </VBox>
    </right>
</BorderPane>
